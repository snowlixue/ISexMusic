<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_igame_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <!-- 取消 -->

        <Button
            android:id="@+id/login_exit_btn"
            android:layout_width="35dp"
            android:layout_height="30.5dp"
            android:layout_margin="10dp"
            android:background="@drawable/normal1_btn"          
            android:textColor="#ffffff" />
        <!-- app名稱 -->

       

        <TextView
            android:id="@+id/tv_friend_title"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/AppName"
            android:textColor="#ffffff"
            android:textSize="20dip" />
        <!-- 登陸 -->
	
        
    </RelativeLayout>
    
    <View
        android:id="@+id/space"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@drawable/ic_shelf_category_divider" />

    <LinearLayout
        android:id="@+id/editRel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/accountRel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="center_vertical" >

            <!-- 用戶名 -->

            <ImageView
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="@drawable/ad"
                android:layout_marginLeft="20dp"
                 />
            <!-- 请输入用户名 -->

            <EditText
                android:id="@+id/accountEdittext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:layout_toRightOf="@id/account"
                android:background="@null"
                android:hint="@string/please_username"
                android:textSize="15sp" />
        </RelativeLayout>

         <View
         android:id="@+id/space1"
         android:layout_width="wrap_content"
         android:layout_height="1dp"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         android:layout_marginTop="10dp"
         android:background="#ff888888" />
         
        <RelativeLayout
            android:id="@+id/pwdRel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/accountRel"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical" >

            <!-- 密   码 -->

            <ImageView
                android:id="@+id/pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="@drawable/password"
                android:layout_marginLeft="20dp" />
            <!-- 请输入密码 -->

            <EditText
                android:id="@+id/pwdEdittext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:layout_toRightOf="@id/pwd"
                android:background="@null"
                android:hint="@string/please_password"
                android:textSize="15sp" />
        </RelativeLayout>
        
        
         <View
         android:id="@+id/space2"
         android:layout_width="wrap_content"
         android:layout_height="1dp"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         android:layout_marginTop="10dp"
         android:background="#ff888888" />
           <!-- 忘记密码？ -->

    <TextView
        android:id="@+id/sound_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/pwdRel"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="15dip"
        android:text="@string/forget_password"
        android:textColor="#29981A" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Button
            android:id="@+id/login_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/register"
            android:text="@string/login"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/register"
            android:text="@string/register"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <View
                android:id="@+id/space3"
                android:layout_width="50dp"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="#ff888888" />

            <TextView
                android:id="@+id/other_login"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/space3"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_horizontal"
                android:text="@string/other_login"
                android:textColor="#ffffff" />

            <View
                android:id="@+id/space4"
                android:layout_width="50dp"
                android:layout_height="1dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="#ff888888" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/qq_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/qq_login" />

            <Button
                android:id="@+id/weixin_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/weixin_login" />

            <Button
                android:id="@+id/weibo_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:background="@drawable/weibo_login" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>