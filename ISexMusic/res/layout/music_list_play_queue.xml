<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@color/grey_dark_light"
    android:orientation="vertical"
    android:showDividers="middle"
    android:background="#ffffff"
     >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:divider="@color/grey_dark_light"
        android:gravity="center_vertical"
        android:dividerPadding="5dp"
        android:orientation="horizontal"
        android:showDividers="middle"
        >
        <!-- 清空 -->
        <TextView 
            android:id="@+id/playqueue_clear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_backround_light"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/grey_dark"
            android:text="@string/clear"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textIsSelectable="false"
            />
        <!-- 播放列表 -->
        <TextView
            android:id="@+id/playqueue_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/playqueue"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textColor="@color/holo_blue_dark"
            android:textIsSelectable="false" />
    </LinearLayout>
    <!-- 歌曲列表 -->
    <ListView 
        android:id="@+id/listview_music_play_queue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </ListView>
</LinearLayout>
